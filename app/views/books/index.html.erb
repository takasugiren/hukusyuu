<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book), class: "link" %></td>
        <td><%= link_to "Edit", edit_book_path(book), class: "link" %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete, class: "link", data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <h2>New book</h2>
  <%= form_with model: @book, local:true do |f| %>
    <label>Title</label>
    <div><%= f.text_field :title %></div>
    <label>Body</label>
    <div><%= f.text_area :body %></div>
    <%= f.submit 'Create Book' %>
  <% end %>
</body>
